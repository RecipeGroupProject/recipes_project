<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Recipe</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="recipe_id">SELECT AN RECIPE TO UPDATE</label><br/>
    <select id="recipe_id" name="recipe_id">
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <option value="<%= recipe.recipe_id %>">
          <%= recipes.name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Recipe</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateRecipeForm">
  <input type="hidden" name="recipe_id" id="recipe_id" value="">
  <div class="form-group">
    <label for="first_name" class="col-sm-2 control-label">Recipe Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_name" name="recipe_name" placeholder="Recipe Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">Recipe Description:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_des" name="recipe_des"  placeholder="Recipe Description" required>
    </div>
  </div>
  <div class="form-group">
    <label for="start_date" class="col-sm-2 control-label">Preparation Time:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="prep_time" name="prep_time" placeholder="Preparation Time" required>
    </div>
  </div>
  <div class="form-group">
    <label for="gpa" class="col-sm-2 control-label">Ingredient List:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="ingredient_list" name="ingredient_list" placeholder="Ingredient List">
    </div>
  </div>
  <div class="form-group">
    <label for="sat" class="col-sm-2 control-label">Instructions:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instructions" name="instructions" placeholder="Instructions">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="updateRecipeButton" type="submit" class="btn btn-default">Update Recipe</button>
    </div>
  </div>
</form>
