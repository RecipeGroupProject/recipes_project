<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/create">Add Recipe</a></li>
    <li class="active">Add Ingredients</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="/addingre" method="POST">
  <div class="form-group">
    <label for="id">SELECT A RECIPE TO ADD INGREDIENTS TO</label><br/>
    <select id="id name="id" class="selectpicker" data-header="Select a recipe" multiple data-actions-box="true" multiple title="Available Recipes">
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <option value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
  </select>
  </div>
</form>

<h2>Add Ingredients</h2>
<form action="/addingre" method="POST" class="form-horizontal" id="addIngForm">
  <div class="form-group">
    <label for="recipe_name" class="col-sm-2 control-label">Ingredient Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="ingredient_name" name="ingredient_name" placeholder="e.g. Salt" required>
    </div>
  </div>
  <div class="form-group">
    <label for="units" class="col-sm-2 control-label">Unit of Measure:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="unit_of_measure" name="unit_of_measure"  placeholder="e.g. 1/2 cup" required>
    </div>
  </div>
  <div class="form-group">
    <label for="quantity" class="col-sm-2 control-label">Quantity:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="quantity" name="quantity"  placeholder="e.g. 2">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="ing_add" type="submit" class="btn btn-default">Add Ingredient</button>
    </div>
  </div>

  <table class="table table-striped table-bordered" id="" style="width:100%">
    <thead id="tableHead">

    </thead>
    <tbody id="tableBody">

    </tbody>
  </table>
