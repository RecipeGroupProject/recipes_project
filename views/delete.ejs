<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Delete Recipe</a></li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<h2>Delete Recipe</h2>


<div style="text-align: center; padding-top:50px">
  <form action="/delete" method="POST">
    <div class="form-group">
      <label for="id">SELECT A RECIPE TO DELETE</label><br/>
      <select id="id" name="id" class="selectpicker" data-live-search="true" data-header="Select a recipe" multiple data-actions-box="true" multiple title="Available Recipes">
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <option value="<%= recipe.id %>">
            <%= recipe.title%>
          </option>
        <% }) %>
      <% } %>
      </select>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-danger">
        DELETE RECIPE
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      </button>
    </div>
  </form>
</div>


<div>
  <h2>Delete Items</h2>
  <table class="table table-striped table-bordered" id="recipeTable2" style="width:100%">
    <thead>
      <tr>
        <th>Ingredient Name</th>
        <th>Unit of Measurement</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
    <% if(typeof recipes.ingredients != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <tr data-id="<%= recipe.id %>">
          <td class="recipe_title"><%= recipe.title %></td>
          <td class="recipe_food_name"><%= recipe.ingredients.food_name %></td>
          <td class="recipe_units"><%= recipe.ingredients.units %></td>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>
</div>
