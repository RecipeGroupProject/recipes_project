<%- partial ('partials/statusmessage.ejs') %>

<h2>Add Instructions</h2>
<form action="/addinst" method="POST" class="form-horizontal" id="addInsForm">
  <div class="form-group">
    <label for="id">SELECT A RECIPE TO ADD INGREDIENTS TO</label><br/>
    <select id="id" name="id" class="selectpicker" data-header="Select a recipe">
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipe){ %>
        <option value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
  </select>
  </div>

  <div class="form-group">
    <label for="recipe_name" class="col-sm-2 control-label">Instruction:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="instruction_name" name="description" placeholder="e.g. set the oven to 475" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="ing_add" type="submit" class="btn btn-default">Add Instruction</button>
    </div>
  </div>
</form>

