    <li class="active">Home</a></li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<!-- Search Recipes -->

  <select class="selectpicker" name="id" data-live-search="true" data-header="Select a recipe" multiple data-actions-box="true" multiple title="Search">
  <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
    <% recipes.forEach(function(recipes){ %>
      <option value="<%= recipes.title %>" data-icon="glyphicon glyphicon-user">
        <%= recipes.title %>
      </option>
    <% }) %>
  <% } %>
  </select>



<!-- Expand/Collapse section -->

     <div class="row">
       <div class="span4 collapse-group">
         <h4><%= recipes.title %></h4>
          <p class="collapse" id="viewdetails">
            <%= recipes.description %>
            <%= recipes.num_min %>
            <%= recipes.instructions %>
            <%= recipes.ingredients %>
          </p>
          <p><a class="btn" data-toggle="collapse" data-target="#viewdetails">Details &raquo;</a></p>
       </div>
     </div>



  <h2>Recipes</h2>
  <table class="table table-striped table-bordered" id="recipeTable" style="width:100%">
    <thead>
      <tr>
        <th>Recipe Name</th>
        <th>Description</th>
        <th>Preparation Time</th>
        <th>Ingredient List</th>
        <th>Instructions</th>
      </tr>
    </thead>
    <tbody>
    <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
      <% recipes.forEach(function(recipes){ %>
        <tr>
          <td><%= recipes.title %></td>
          <td><%= recipes.description %></td>
          <td><%= recipes.num_min %></td>
          <td><%= recipes.instructions %></td>
          <td><%= recipes.ingredients %></td>
        </tr>
      <% }) %>
    <% } %>
    </tbody>
  </table>
