<%- partial ('partials/statusmessage.ejs') %>

<!-- Search Recipes -->

  <div>
    <h2>Recipes</h2>
    <table class="table table-striped table-bordered" id="recipeTable" style="width:100%">
      <thead>
        <tr>
          <th>Recipe Name</th>
          <th class="is-hidden">Description</th>
          <th>Preparation Time</th>
          <th class="is-hidden">Ingredient List</th>
          <th class="is-hidden">Instructions</th>
          <th>View Recipe</th>
        </tr>

      </thead>
      <tbody>
      <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
        <% recipes.forEach(function(recipe){ %>
          <tr data-id="<%= recipe.id %>">
            <td class="recipe_title"><%= recipe.title %></td>
            <td class="is-hidden recipe_description"><%= recipe.description %></td>
            <td class="recipe_preparation_time"><%= recipe.num_min %></td>
            <td class="is-hidden recipe_instructions"><%= recipe.instructions %></td>
            <td class="is-hidden recipe_ingredients"><%= recipe.ingredients %></td>
            <td class=""><a href="#" class="btn btn-info view-recipe">Recipe</a></td>
          </tr>
        <% }) %>
      <% } %>
      </tbody>
    </table>
  </div>


  <div class="modal fade" id="cardWindow">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">RECIPE</h4>
        </div>
        <div class="modal-body">
          <p id="blah"></p>
          <p id="blah2"></p>
          <p id="blah3"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
