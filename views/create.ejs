<%- partial ('partials/statusmessage.ejs') %>

<h2>Add Recipe</h2>
<form action="/create" method="POST" class="form-horizontal" id="addRecipeForm">
  <div class="form-group">
    <label for="recipe_name" class="col-sm-2 control-label">Recipe Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="recipe_name" name="title" placeholder="e.g. Lasagna" required>
    </div>
  </div>
  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">Recipe Description:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" name="description"  placeholder="Recipe Description" required>
</div>
  </div>
  <div class="form-group">
    <label for="start_date" class="col-sm-2 control-label">Preparation Time:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="prep_time" name="num_min" placeholder="e.g. 45 mins" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="addRecipe" type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
